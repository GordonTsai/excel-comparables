'    End If
'  Next j
  
'  'Operating Income. The column will be the second column from the left. This will be the second oldest year of data.
'  stmp = GetTextBetween(sIS_A, "Operating Income" & vbLf, "</tr>")
'  i = 0
'  For j = 1 To 2
'    i = InStr(i + 1, stmp, "<td")
'    If i > 0 And j = 2 Then
'      sVal = AdvancedTrim(GetTextBetween(stmp, ">", "<", i))
'      shData.Cells(lRow, Range("rGoogleOI_A").Column).Value = GetNumberYahoo(sVal)
'    End If
'  Next j
  
  'Cash from Operating Activities
'  stmp = GetTextBetween(sCF_A, "Cash from Operating Activities" & vbLf, "</tr>")
'  i = 0
'  For j = 1 To 2
'    i = InStr(i + 1, stmp, "<td")
