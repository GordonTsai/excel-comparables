'      shData.Cells(lRow, Range("rGoogleNI_A").Column).Value = GetNumberYahoo(sVal)
'    End If
'  Next j
  
'  '"Quarterly Data" Line Operating Income
'  stmp = GetTextBetween(sIS_Q, "Operating Income" & vbLf, "</tr>")
'  i = 0
